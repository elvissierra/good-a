# --- GoodToday Backend (.env.example) ---

# Database connection (dev)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/goodtoday

# JWT secret (CHANGE THIS in your real .env)
SECRET=replace-with-a-strong-secret

# Token lifetimes
ACCESS_TTL_MIN=30
REFRESH_TTL_DAYS=30

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,capacitor://localhost,ionic://localhost